/* 轮播图 */
swiper{
  width: 100%;
  height: 600rpx;
  margin-bottom: 30rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}
.head{
  display: inline;
}
picker{
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}
.down{
  width: 40rpx;
  height: 20rpx;
  float: left;
  margin-top: 40rpx;
  margin-right: 20rpx;
}

.search-bar-warper{
    background:#eeeeee;
    height:80rpx;
    margin:0 20rpx;
    border-radius: 10rpx;
    padding-left: 20rpx;
    align-items: center;
    display: flex;
    /*width:100%;*/
}

.section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.section_cont .section_cont_sub{
    font-size: 60rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
    font-weight: bold;
}
.section_cont .section_cont_add{
  font-size: 30rpx;
}
.section_cont .section_cont_price{
    font-size:32rpx;
    color:#d24a58;
}
.section_book{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    background:#d24a58;
    line-height: 80rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}
/* 导航对应内容项 */
.header{
  display: block;
  margin-top: 10rpx;
  padding-bottom: 5px;
  height: 50rpx;
  line-height: 50rpx;
}
.post-like{
  float:right;
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
vertical-align: middle;
margin-right: 20px;

}
.post-author-date{
  float: left;
  /* margin:10rpx 0rpx 20rpx 10rpx; */
  margin-left: 20rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
